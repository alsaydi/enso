primitive int
primitive float
primitive str
primitive bool

class Catalog
! categories: Category*
! products: Product*
! items: Item*
! sellers: SellerContactInfo*
! addresses: Address*
! tags: Tag*
end

class Category
##id: str
  name: str
  description: str
  imageurl: str
  map_coords: str
  products: Product* / Product.category
end

class Product
##id: str
  name: str
  description: str
  imageURL: str
  category: Category / Category.products
  items: Item* / Item.product
end


class Item
##id: str
  product: Product / Product.items
  name: str
  description: str
  imageURL: str
  imageThumbURL: str
  price: int
  address: Address
  contactInfo: SellerContactInfo
  totalScore: int
  numberOfVotes: int
  disabled: int
  tags: Tag* / Tag.items
end

class Address 
##id: str
  street1: str
  street2: str
  city: str
  state: str
  zip: str
  latitude: float
  longitude: float
end

class SellerContactInfo
##id: str
  lastName: str
  firstName: str
  email: str
end

class Tag
##id: int
  tag: str
  refCount: int
  items: Item* / Item.tags
  style: str = 
    "((@refCount/5)>=3) ? 'xxlarge' : (((@refCount/5)>=2) ? 'xlarge' : (((@refCount/5)>=3) ? 'large' : ('medium' ) ) )"
  name: str = "@tag"
end

