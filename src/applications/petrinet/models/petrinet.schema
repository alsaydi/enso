
primitive \str
primitive \int

class PetriNet
! nodes: Node*
! arcs: Arc*


class Node
# name: str


class Place < Node
  arcs: Arc* / place



class Transition < Node
  arcs: Arc* / transition


// need this, because there can be multiple
// arcs between the same p/t, t/p
// an manyfields do not allow multiple things with the same key.
// NB: the sign multiplicity indicates direction`
class Arc 
  multiplicity: int
  place: Place
  transition: Transition


