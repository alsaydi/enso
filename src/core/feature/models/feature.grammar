start Feature

Feature ::= [Feature] rules:Rule*
Rule ::= [Rule] Save? lhs:sym "::=" rhs:FeatureExpr
Save ::= "load" @"@save=true"

FeatureExpr ::= Var
              | File
              | Dot
              | Rename
              | Paren

Paren ::= "(" FeatureExpr ")"

Var ::= [Var] name:sym
File ::= [File] path:str ("as" as:sym)?

Dot ::= [Dot] e1:FeatureExpr "." e2:FeatureExpr
Rename ::= [Rename] e:FeatureExpr "[" from:sym "->" to:sym "]"

