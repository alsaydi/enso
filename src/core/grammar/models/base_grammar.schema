primitive \str
primitive \int
primitive \bool

class Grammar
  start: Rule
  rules: Rule*
end

class Rule
  #name: str
  #grammar: Grammar / Grammar.rules
  arg: Expression
end 

class Expression
end

class Call < Expression
  rule: Rule
end

// this is token-sequence
class Sequence < Expression
  elements: Expression*
end

class Lit < Expression
  value: str
end
